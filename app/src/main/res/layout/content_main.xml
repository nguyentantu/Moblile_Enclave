                                <!--android:layout_height="1dp"-->
                                <!--android:layout_margin="10dp"-->
                                <!--android:background="@color/lightgray" />-->



                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="320dp"-->
